<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập hệ số a:"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/et_hesoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập hệ số b:"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/et_hesoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/bt_tong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tong"/>

    <Button
        android:id="@+id/bt_hieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hieu"/>
    <Button
        android:id="@+id/bt_nhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nhan"/>
    <Button
        android:id="@+id/bt_chia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chia"/>


    <TextView
        android:id="@+id/tv_ketqua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ket qua:"
        android:textSize="20dp"/>

</LinearLayout>
